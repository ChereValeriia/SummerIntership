<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="InternshipSchedule">
        <addColumn tableName="LESSON">
            <column name="ROOM_ID" type="UUID"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="InternshipSchedule">
        <createIndex indexName="IDX_LESSON_ROOM_ID" tableName="LESSON">
            <column name="ROOM_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="ROOM_ID" baseTableName="LESSON" constraintName="FK_LESSON_ON_ROOM"
                                 referencedColumnNames="ID" referencedTableName="ROOM"/>
    </changeSet>
</databaseChangeLog>